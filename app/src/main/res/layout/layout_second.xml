<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <include
        android:id="@+id/main_tool"
        layout="@layout/layout_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_tool">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="413dp"
        android:layout_height="733dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="-2dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_iknip"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_2"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/img_a1"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_a2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/user_story"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/img_a1"
            app:layout_constraintStart_toEndOf="@id/img_a1"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_a3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bell"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_a4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_titik_tiga"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6956"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/txt_a1"
            app:layout_constraintStart_toEndOf="@id/img_a2"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_a3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Postingan"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/txt_a2"
            app:layout_constraintStart_toStartOf="@id/txt_a2"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_a4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27,7 jt"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txt_a1"
            app:layout_constraintStart_toEndOf="@id/txt_a2"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_a5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengikut"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/txt_a4"
            app:layout_constraintStart_toStartOf="@id/txt_a4"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_a6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="219"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txt_a1"
            app:layout_constraintStart_toEndOf="@id/txt_a5"
            android:layout_marginTop="25dp"
            android:layout_marginStart="40dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_a7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mengikuti"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/txt_a4"
            app:layout_constraintStart_toEndOf="@id/txt_a4"
            android:layout_marginStart="40dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_a8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ikhwan Hanipp"
            android:textStyle="bold"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/img_a2"
            app:layout_constraintStart_toStartOf="@id/img_a2"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_a9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programmer"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/txt_a8"
            app:layout_constraintStart_toStartOf="@id/img_a2"
            android:layout_marginTop="5dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_a10"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="”You might not think that programmers are  artists, but programming is an extremely creative profession. It’s  logic-based creativity.” – John Romero  💻"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/txt_a9"
            app:layout_constraintStart_toStartOf="@id/img_a2"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_1"
            android:layout_width="150dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/txt_a10"
            app:layout_constraintStart_toStartOf="@id/txt_a10"
            android:layout_marginTop="20dp"
            android:text="Edit Profile"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_2"
            android:layout_width="150dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/txt_a10"
            app:layout_constraintStart_toEndOf="@id/btn_1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:text="Bagikan Profile"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_a5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_feed"
            app:layout_constraintTop_toBottomOf="@id/btn_1"
            app:layout_constraintStart_toStartOf="@id/btn_1"
            android:layout_marginTop="20dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_a6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_reels"
            app:layout_constraintTop_toBottomOf="@id/btn_1"
            app:layout_constraintStart_toEndOf="@id/img_a5"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_a7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_tag"
            app:layout_constraintTop_toBottomOf="@id/btn_1"
            app:layout_constraintStart_toEndOf="@id/img_a6"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidline_dua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintGuide_percent="0.92"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_a8"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/guidline_dua"
        android:src="@drawable/ic_home"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_a9"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/guidline_dua"
        android:src="@drawable/ic_search"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/img_a8"
        android:layout_marginStart="50dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_a10"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/guidline_dua"
        android:src="@drawable/ic_upload"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/img_a9"
        android:layout_marginStart="50dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_a11"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/guidline_dua"
        android:src="@drawable/ic_reels"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/img_a10"
        android:layout_marginStart="60dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_a12"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/guidline_dua"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/img_a11"
        android:layout_marginStart="70dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>